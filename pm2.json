  
{
    "name"        : "node_serve", 
    "script"      : "./app.js", 
    "cwd"         : "./", 
    "watch": [ 
      "./"
    ],
    "ignore_watch" : [ 
      "node_modules", 
      "logs",
      "public",
      "uploads",
      "temp"
    ],
    "watch": true,
    "error_file" : "../logs/app-err.log", 
    "out_file"   : "../logs/app-out.log", 
    "log_date_format":"YYYY-MM-DD HH:mm:ss",
    "env": {
        "NODE_ENV": "production"
    }
  }
